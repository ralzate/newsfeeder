<%page_header "Top Stories" %>
<p><%=link_to 'Add One!', new_story_path, class: 'btn btn-primary btn-large'%></p>
<% @stories.each do |story| %>
    <div class="well well-lg">
        <h2><%=link_to story.title, story_path(story) %></h2>

        <p><%=truncate(story.body, length: 350) %></p>

        <div class="btn-group">
            <%= link_to 'Edit', edit_story_path(story), class: 'btn btn-info' %>
            <%= link_to 'Delete', story_path(story), data: {confirm: 'Are you sure you want to delete this?'}, method: :delete, class: 'btn btn-danger'%>
        </div>
    </div>
<%end%>
